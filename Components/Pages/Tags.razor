@page "/tags"
@using HexoBlog.Model
@using HexoBlog.Service
@inject ClassifyService CategoryService
@inject NavigationManager NavigationManager

<!-- 硬编码的a标签用于页面跳转 -->
<a href="@GetArticleUrl("api/articles/PMP/引论/指南概述和目的/项目管理标准.json")" @onclick="NavigateToArticle">跳转到文章页面</a>




@if (CategoryService.Categories.Count == 0)
{
    <p>Loading...</p>
}
else
{
    <ul>
        @foreach (var category in CategoryService.Categories)
        {
            <li>
              
                <p>Path: @category.Name</p>
                <p>Path: @category.Path</p>
                <p>Count: @category.Count</p>
            </li>
        }
    </ul>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await CategoryService.LoadTagAsync();
    }
    private string GetArticleUrl(string articlePath)
    {
        // 构建Article.razor页面的完整URL
        // 假设Article.razor页面路由为/articles/{path}
        return $"articles/{articlePath}";
    }

    // 用于处理导航事件的方法（可选，如果不需要在点击时执行其他操作，可以移除）
    private void NavigateToArticle()
    {
        // 这里可以执行一些在点击链接前的逻辑，比如确认对话框等
        // 如果不需要，这个方法可以留空
    }
}